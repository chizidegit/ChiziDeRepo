<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="40dp"/>

    <TextView
            android:id="@+id/tv_text"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/tv_action"
            android:text="ConstraintLayout is available as a support libraryConstraintLayout is available as a support library"
            android:singleLine="true"
            app:layout_constraintStart_toEndOf="@id/iv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_action"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="查看"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_text"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>